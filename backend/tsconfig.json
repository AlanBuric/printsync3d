{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist/src",
  },
  "include": ["./src"],
  "exclude": ["./dist", "node_modules"]
}