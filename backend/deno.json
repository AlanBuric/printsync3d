{
  "tasks": {
    "dev": "deno run -A --no-clear-screen --env --watch src/server.ts",
    "start": "deno run -A --env src/server.ts",
    "compile": "deno compile -A --env --output PrintSync3D src/server.ts",
    "build:esbuild": "node esbuild.js",
    "start:esbuild": "node dist/PrintSync3D.js",
    "test": "deno test --parallel"
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "checkJs": true
  },
  "imports": {
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.4.2",
    "@serialport/bindings-cpp": "npm:@serialport/bindings-cpp@13.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/http": "jsr:@std/http@^1.0.13",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/streams": "jsr:@std/streams@^1.0.9",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "http-status-codes": "npm:http-status-codes",
    "hono": "jsr:@hono/hono@^4.7.0",
    "serialport": "npm:serialport@^13.0.0",
    "zod": "npm:zod@^3.24.1"
  },
  "fmt": {
    "singleQuote": true
  },
  "nodeModulesDir": "auto",
  "vendor": true
}
