{
  "tasks": {
    "dev": "deno run -A --no-clear-screen --env --watch src/server.ts",
    "compile": "deno compile -A --env --output dist/PrintSync3D src/server.ts",
    "compile:arm64": "deno compile -A --env --output dist/PrintSync3D --target aarch64-unknown-linux-gnu src/server.ts",
    "start": "deno run -A --env src/server.ts",
    "test": "deno test --parallel"
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "checkJs": true
  },
  "imports": {
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.0",
    "@serialport/bindings-cpp": "npm:@serialport/bindings-cpp@13.0.1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/http": "jsr:@std/http@^1.0.17",
    "@std/path": "jsr:@std/path@^1.1.0",
    "@std/streams": "jsr:@std/streams@^1.0.9",
    "@std/testing": "jsr:@std/testing@^1.0.13",
    "http-status-codes": "npm:http-status-codes",
    "hono": "jsr:@hono/hono@^4.7.11",
    "serialport": "npm:serialport@^13.0.0",
    "zod": "npm:zod@^3.25.49"
  },
  "fmt": {
    "singleQuote": true
  },
  "nodeModulesDir": "auto",
  "vendor": true
}
