{
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-net --allow-env --allow-ffi --allow-sys --no-clear-screen --env --watch src/server.ts",
    "start": "deno run --allow-read --allow-write --allow-net --allow-env --allow-ffi --allow-sys --env src/server.ts",
    "compile": "deno compile --allow-read --allow-write --allow-net --allow-env --allow-ffi --allow-sys --env --output PrintSync3D src/server.ts",
    "build:esbuild": "node esbuild.js",
    "start:esbuild": "node dist/PrintSync3D.js",
    "test": "deno test --parallel"
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "checkJs": true,
    "types": [
      "./node_modules/@types/multer/index.d.ts",
      "./node_modules@types/express/index.d.ts"
    ]
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/streams": "jsr:@std/streams@^1.0.9",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "http-status-codes": "npm:http-status-codes",
    "express": "npm:express",
    "multer": "npm:multer",
    "express-validator": "npm:express-validator",
    "hono": "jsr:@hono/hono@^4.6.20"
  },
  "lint": {
    "exclude": ["no-namespace"]
  },
  "fmt": {
    "singleQuote": true
  }
}